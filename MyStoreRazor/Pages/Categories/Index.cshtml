@page
@model MyStoreRazor.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col pt-6"> 
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col pt-6">
            <h2 class="text-primary">
                <a asp-page="categories/create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Category
                </a>
            </h2>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                        
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75" role="group">

                        <a asp-page="categories/edit" asp-route-id="@obj.Id" class="btn btn-primary px-5 mx-3">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>

                        <a asp-page="categories/delete" asp-route-id="@obj.Id" class="btn btn-danger px-5 mx-3">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
                </tr>
            }

        </tbody>
    </table>
</div>

